<!-- views/professors.ejs -->
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Professors - Collegify</title>
    <link href="/css/styles.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
</head>
<body class="bg-gray-100 font-sans">
    <header class="bg-gray-800 text-white py-4">
        <div class="container mx-auto px-4">
            <h1 class="text-2xl font-bold">Professors</h1>
        </div>
    </header>
    <main class="container mx-auto px-4 py-8">
        <section class="mb-8">
            <h2 class="text-xl font-bold mb-4">Projects and Professors</h2>
            <ul>
                <% professors.forEach(professor => { %>
                    <li class="bg-white shadow-md rounded-lg p-4 mb-4">
                        <h3 class="text-lg font-semibold mb-2"><%= professor.name %></h3>
                        <p><strong>Email:</strong> <%= professor.email %></p>
                        <p><strong>Area of Work:</strong> <%= professor.area_of_work %></p>
                    </li>
                    <% }); %>
                <!-- Add more projects and professors here -->
            </ul>
        </section>
    </main>
    <footer class="bg-gray-800 text-white text-center py-4 mt-8">
        <p>&copy; 2024 Collegify</p>
        <p><a href="/privacy-policy" class="text-white">Privacy Policy</a> | <a href="/terms-of-service" class="text-white">Terms of Service</a></p>
    </footer>
</body>
</html>
